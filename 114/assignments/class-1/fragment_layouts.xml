<?xml version="1.0" encoding="utf-8"?>
<!-- Phone Layout -->
<!-- activity_main -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_container"
    android:padding="100dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent" />

<!-- Tablet Layout -->
<!-- activity_main -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:padding="100dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/fragment_container_list"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <FrameLayout
        android:id="@+id/fragment_container_detail"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2" />
</LinearLayout>

<!-- fragment_recipe_detail -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".RecipeDetailFragment">

<TextView
    android:id="@+id/recipe_detail_text"
    android:layout_width="match_parent"
    android:layout_height="match_parent" />

</FrameLayout>

<!-- fragment_recipe_list -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".RecipeListFragment">

<TextView
    android:id="@+id/recipe_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"/>

</FrameLayout>